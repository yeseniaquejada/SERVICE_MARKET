
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Service Market</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/Layout.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar fixed-top navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <img id="logo" src="~/Logos/logo.png" />
            <a id="service" class="navbar-brand" href="@Url.Action("Index", "Home")">
                Service Market
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menú de navegación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <form class="d-flex" role="search">
                            <input class="busquedad form-control me-2" type="search" placeholder="Busca Servicios" aria-label="Search">
                            <button class="btn btn-primary" type="submit">Buscar</button>
                        </form>
                        <br />
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Servicios disponibles</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="item nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categorías
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Hogar</a></li>
                                <hr class="dropdown-divider">
                                <li><a class="dropdown-item" href="#">Construcción</a></li>
                                <hr class="dropdown-divider">
                                <li><a class="dropdown-item" href="#">Moda</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Favoritos</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Mis publicaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Crear publicación</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Publicar solicitud</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Solicitudes clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Servicios pendientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Mi perfil</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Historial</a>
                        </li>
                        <li class="nav-item">
                            <a class="item nav-link" href="@Url.Action()">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <section>
        <div class="container body-content">
            @RenderBody()
        </div>
    </section>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
